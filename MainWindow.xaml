<Window x:Class="PostIt.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Post-it Note" Height="400" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseDown="Window_MouseDown">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ベースの黄色背景 -->
        <Border CornerRadius="6" Background="#FFFFCC"/>

        <!-- 進捗を示す水色背景 -->
        <Border x:Name="ProgressBackground" 
                CornerRadius="6" 
                Background="#23B6E6"
                VerticalAlignment="Bottom"
                Height="0"/>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="MainTextBox" 
                     Grid.Row="0"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     BorderThickness="0"
                     Background="Transparent"
                     FontSize="28"
                     FontFamily="Yu Gothic"
                     FontWeight="ExtraBold"
                     MaxLength="140"
                     TextChanged="MainTextBox_TextChanged"/>

            <TextBox x:Name="GoalTextBox"
                     Grid.Row="1"
                     Width="80"
                     Height="40"
                     Text="140"
                     TextAlignment="Right"
                     FontSize="24"
                     HorizontalAlignment="Right"
                     PreviewTextInput="GoalTextBox_PreviewTextInput"
                     TextChanged="GoalTextBox_TextChanged"/>
        </Grid>
    </Grid>
</Window>